##############################################################################################################
### GO
##############################################################################################################
dev:
	go run ./src/main.go

test:
	go run test ./src/...

build:
	go build -o engine src/*.go

##############################################################################################################
### DOCKER
##############################################################################################################
container-db:
	docker compose -f docker-compose-db.yml up

image:
	docker build -t sewakantor:latest .

container:
	docker compose up